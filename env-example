# 安全配置
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600

# LLM API配置
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 邮件配置（可选，用于发送注册确认等）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password 